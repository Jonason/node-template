{
  "name": "node-template",
  "version": "1.0.0",
  "description": "template for starting a nodejs project. setup express, debug, lint rules, nodemon.",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "DEBUG=app nodemon app.js",
    "lint": "eslint app.js"
  },
  "keywords": [
    "nodejs",
    "template"
  ],
  "author": "Jonason Ho",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "4.1.3",
    "chalk": "2.4.1",
    "debug": "3.1.0",
    "express": "4.16.3",
    "morgan": "1.9.0",
    "nodemon": "1.18.3",
    "path": "0.12.7"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "5000",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    }
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0"
  }
}
